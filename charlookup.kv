# Filename: my.kv

<MyGrid>:
    GridLayout:
        cols: 1
        rows: 2
        size: root.width, root.height + 200

        GridLayout:
            cols: 3

            Label:
                text: 'Character Name: '
                size_hint_x: None
                width: 200
                height: 50

            TextInput:
                multinline: False
                height: 50

            Button:
                text: 'Submit'
                height: 50
                on_press: app.btn()
